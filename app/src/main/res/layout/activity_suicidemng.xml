<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/pink"
    android:layout_height="match_parent"
    tools:context=".SuicidemngActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pink">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="We Are Here For You"
                android:textColor="@color/light_blue"/>


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="159dp"
                android:layout_height="101dp"
                android:src="@drawable/suicide"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="5dp" />

            <TextView
                android:id="@+id/txtHallo"
                android:layout_width="365dp"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="#039BE5"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="171dp"
                tools:layout_editor_absoluteY="25dp"
                tools:text="Hello There, We are here for you" />

            <TextView
                android:id="@+id/txt001"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="#039BE5"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="171dp"
                tools:layout_editor_absoluteY="25dp"
                tools:text="In the past few weeks have you wished you were dead?" />


            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="YES" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NO"
                tools:ignore="DuplicateSpeakableTextCheck" />


            <TextView
                android:id="@+id/txt002"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="#039BE5"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="171dp"
                tools:layout_editor_absoluteY="25dp"
                tools:text="Have you felt that you or your family would be better off if your were DEAD?" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="YES" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NO" />

            <TextView
                android:id="@+id/txt003"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="#039BE5"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="171dp"
                tools:layout_editor_absoluteY="25dp"
                tools:text="Having you been having thoughts about killing yourself" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="YES" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NO" />


            <TextView
                android:id="@+id/txt004"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="#039BE5"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="171dp"
                tools:layout_editor_absoluteY="25dp"
                tools:text="Have you ever tried to kill your self?" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="YES" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NO" />

            <TextView
                android:id="@+id/txt005"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="#039BE5"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="171dp"
                tools:layout_editor_absoluteY="25dp"
                tools:text="Are you having thoughts of killing yourself right now?" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="YES" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NO" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />

                <TextView
                    android:id="@+id/txt006"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="#039BE5"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="171dp"
                    tools:layout_editor_absoluteY="25dp"
                    tools:text="Need Help?" />
                <TextView
                    android:id="@+id/txt008"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="#FFB300"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="171dp"
                    tools:layout_editor_absoluteY="25dp"
                    tools:text="CLICK HERE?" />




            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>